<UserControl
    x:Class="LogikaOefening.ucSpecialMethods"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LogikaOefening"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" MinWidth="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            FontSize="30"
            FontWeight="Bold"
            Text="Speciale mothoden" />

        <Label
            Grid.Row="4"
            Grid.Column="1"
            Content="Getal 1:" />

        <Label
            Grid.Row="5"
            Grid.Column="1"
            Content="Getal 2:" />

        <Label
            Grid.Row="9"
            Grid.Column="1"
            Content="Som 3:" />

        <Label
            Grid.Row="10"
            Grid.Column="1"
            Content="Som 4:" />

        <Label
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="12,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Som 1:" />

        <Label
            Grid.Row="8"
            Grid.Column="1"
            Content="Som 2:" />

        <Button
            Name="btnVulDeWaardenIn"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="btnVulDeWaardenIn_Click"
            Content="Vul de waarden in" />

        <Button
            Name="btnBerekenen"
            Grid.Row="6"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="btnBerekenen_Click"
            Content="Berekenen..." />

        <Button
            Name="btnVerwijderen"
            Grid.Row="13"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="btnVerwijderen_Click"
            Content="Verwijderen..." />

        <TextBox
            Name="txtGetal1"
            Grid.Row="4"
            Grid.Column="2" />

        <TextBox
            Name="txtGetal2"
            Grid.Row="5"
            Grid.Column="2" />

        <TextBox
            Name="txtSom1"
            Grid.Row="7"
            Grid.Column="2"
            IsReadOnly="True" />

        <TextBox
            Name="txtSom2"
            Grid.Row="8"
            Grid.Column="2"
            IsReadOnly="True" />

        <TextBox
            Name="txtSom3"
            Grid.Row="9"
            Grid.Column="2"
            IsReadOnly="True" />

        <TextBox
            Name="txtSom4"
            Grid.Row="10"
            Grid.Column="2"
            IsReadOnly="True" />
    </Grid>
</UserControl>